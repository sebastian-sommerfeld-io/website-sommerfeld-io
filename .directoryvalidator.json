{
  "ignoreDirs": [
    "node_modules",
    "target",
    ".git",
    ".idea",
    "**/*.log",
    "**/.vagrant",
    "**/.terraform*",
    "**/*.tfstate*"
  ],
  "commonRules": {
    "rule_adoc": {
      "type": "file",
      "name": "*.adoc"
    }
  },
  "rules": [
    {
      "type": "file",
      "name": ".directoryvalidator.json"
    },
    {
      "type": "file",
      "name": ".gitignore"
    },
    {
      "type": "file",
      "name": ".ls-lint.yml"
    },
    {
      "type": "file",
      "name": ".yamllint.yml"
    },
    {
      "type": "file",
      "name": "lint.sh"
    },
    {
      "type": "file",
      "name": "README.adoc"
    },
    {
      "type": "directory",
      "name": "docs",
      "rules": [
        {
          "type": "file",
          "name": "antora.yml"
        },
        {
          "type": "directory",
          "name": "modules",
          "rules": [
            {
              "type": "directory",
              "name": "*",
              "rules": [
                {
                  "type": "file",
                  "name": "nav.adoc"
                },
                {
                  "type": "directory",
                  "name": "assets",
                  "rules": [
                    {
                      "type": "directory",
                      "name": "attachments"
                    },
                    {
                      "type": "directory",
                      "name": "images"
                    }
                  ]
                },
                {
                  "type": "directory",
                  "name": "pages"
                },
                {
                  "type": "directory",
                  "name": "partials"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "directory",
      "name": "resources",
      "isOptional": true
    },
    {
      "type": "directory",
      "name": "src",
      "rules": [
        {
          "type": "directory",
          "name": "cicd"
        },
        {
          "type": "directory",
          "name": "main"
        },
        {
          "type": "directory",
          "name": "test"
        }
      ]
    }
  ]
}
